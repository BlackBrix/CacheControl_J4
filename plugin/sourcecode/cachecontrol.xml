<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="system" method="upgrade">
	<name>plg_system_cachecontrol</name>
	<creationDate>June 2023</creationDate>
	<author>SharkyKZ (Orig. by Crosstec GmbH)</author>
	<copyright>This Joomla! component is released under the GNU/GPL license</copyright>
	<authorEmail>SharkyKZ > forum.joomla.org</authorEmail>
	<authorUrl>forum.joomla.org/viewtopic.php?f=831&amp;t=1002431</authorUrl>
	<version>4.0.1</version>
	<description>PLG_SYSTEM_CACHECONTROL_XML_DESCRIPTION</description>
    <files>
        <filename plugin="cachecontrol">cachecontrol.php</filename>
        <folder>services</folder>
    </files>
    <languages>
		<language tag="en-GB">language/en-GB/plg_system_cachecontrol.ini</language>
		<language tag="en-GB">language/en-GB/plg_system_cachecontrol.sys.ini</language>
	</languages>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="definitions" type="textarea" cols="30" rows="10" default="option=com_content" label="PLG_SYSTEM_CACHECONTROL_CONFIG_DEFINITIONS_LABEL" description="PLG_SYSTEM_CACHECONTROL_CONFIG_DEFINITIONS_DESCRIPTION"/>
                <field name="reenable_afterdispatch" type="radio" default="0" label="PLG_SYSTEM_CACHECONTROL_CONFIG_REENABLE_AFTERDISPATCH_LABEL" description="PLG_SYSTEM_CACHECONTROL_CONFIG_REENABLE_AFTERDISPATCH_DESCRIPTION">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>